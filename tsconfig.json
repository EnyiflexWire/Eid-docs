{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "reset.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "theme.jsx",
    "tailwind.config.mjs",
    "theme.config.jsx"
  ],
  "files": ["environment.d.ts"],
  "exclude": ["node_modules"]
}
